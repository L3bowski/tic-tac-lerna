{
  "name": "tic-tac-lerna",
  "version": "0.0.0",
  "description": "Proof of concept on how to use Lerna to manage multi-package Typescript projects",
  "scripts": {
    "build": "lerna run build",
    "prepare": "lerna bootstrap && npm run build",
    "publish": "lerna publish",
    "clean:lib": "rm packages/**/lib -rf",
    "reset": "lerna clean -y && rm -rf node_modules/"
  },
  "keywords": [
    "lernajs",
    "poc",
    "proof",
    "concept",
    "multiple",
    "packages"
  ],
  "author": "Carles Capellas <capellas.carles@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "lerna": "^3.13.1"
  }
}
